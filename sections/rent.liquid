{{ 'section-rent.css' | asset_url | stylesheet_tag }}

<h1 class="title">
  {{ section.settings.heading }}
</h1>

<section class="locations">
  <div class="o-container -wide">
    <div class="wrapper">
      <p class="content">{{ section.settings.content }}</p>
      <img class="image" src="{{ section.settings.image | image_url: width: 1000 }}" alt="" width="1000" height="1000" loading="lazy">
      <ul class="locations">
        {% for block in section.blocks %}
          <li class="location">
            <p class="location_name">{{ block.settings.location }}</p>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

<section class="contactUs">
  <div class="o-container -wide">
    <div class="wrapper">
      <p class="content">{{ section.settings.contactus }}</p>
      <a class="c-button -primary" href="/pages/contact">Contáctanos</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Renta un purificador",
  "class": "section--rent",
  "tag": "section",
  "blocks": [
    {
      "type": "location",
      "name": "Ubicación",
      "settings": [
        {
          "type": "text",
          "id": "location",
          "label": "Nombre de la ubicación",
        },
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Encabezado",
      "default": "Renta un purificador Welken"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen",
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Contenido",
      "default": "¿Necesitas un purificador de agua de forma temporal? Renta un purificador Welken dentro de las siguientes zonas y municipios:",
    },
    {
      "type": "textarea",
      "id": "contactus",
      "label": "Contáctanos",
      "default": "Envíanos un mensaje para conocer la disponibilidad y requisitos",
    }
  ],
  "presets": [
    {
      "name": "Características",
    }
  ]
}
{% endschema %}
